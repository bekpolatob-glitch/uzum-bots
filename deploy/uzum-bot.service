
[Unit]
Description=Uzum Monitor Bot
After=network.target

[Service]
Type=simple
WorkingDirectory=/workspaces/uzum-bots
# Point this to your local .env file with TOKEN and CHAT_ID
EnvironmentFile=/workspaces/uzum-bots/.env
ExecStart=/usr/bin/python3 /workspaces/uzum-bots/bot.py
Restart=always
RestartSec=10
User=codespace

[Install]
WantedBy=multi-user.target
